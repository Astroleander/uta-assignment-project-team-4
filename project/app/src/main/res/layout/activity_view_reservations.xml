<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="?attr/actionBarSize">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:layout_editor_absoluteY="56dp">
        <TextView
            android:id="@+id/tv_startDate_reservation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="start date"/>
        <TextView
            android:id="@+id/tv_startTime_reservation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="start time"/>

        <TextView
            android:id="@+id/tv_endDate_reservation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="end date"/>
        <TextView
            android:id="@+id/tv_endTime_reservation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="end time"/>

        <EditText
            android:id="@+id/et_startTime"
            android:layout_width="317dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:hint="Strat Time(YYYY/MM/DD)" />

        <EditText
            android:id="@+id/et_endTime"
            android:layout_width="315dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:hint="End Time(YYYY/MM/DD)" />
        <Button
            android:id="@+id/btn_searchMyReservation"
            android:layout_width="315dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="View My Resverations" />
        <FrameLayout
            android:id="@+id/reservation_flcontainer"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>